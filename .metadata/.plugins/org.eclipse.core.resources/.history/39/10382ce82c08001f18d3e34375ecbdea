package chap09_inherit.car;

public class _01_Inerit {

	public static void main(String[] args) {
		// 1. 상속받은 자식 클래스 객체 생성
		HyundaiCarInherit hCar = new HyundaiCarInherit();
		
		// 2. 부모클래스인 Car의 속성과 기능 사용
		hCar.company = "현대";
		hCar.model = "제네시스";
		hCar.color = "검정";
		hCar.price = 5000;

		hCar.carInfo();
		
		// 3. 자식클래스인 HyundaiCarInherit의 고유한 속성이나 기능 사용
		hCar.autoPilot();
		
		KiaCarInherit kCar = new KiaCarInherit();
		
		hCar.company = "기아";
		hCar.model = "k9";
		hCar.color = "초록";
		hCar.price = 6000;
	}

}
