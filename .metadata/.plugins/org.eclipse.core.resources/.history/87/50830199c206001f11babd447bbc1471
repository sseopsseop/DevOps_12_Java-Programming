package chap06_method.score;

public class Score {

	// 1. int형 배열(정수배열)을 매개변수로 받아서 점수의 총합을 int형으로 리턴하는 메소드 
	// getTotalScore를 구현하세요.
	
	public int getTotalScore(int[] intArr) {
		int sum = 0;
		
		for(int score : intArr) sum += score;
		
		return sum;
	}
	
	// 2. int형 배열(정수배열)을 매개변수로 받아서 점수의 평균을 double형으로 리턴하는 메소드
	// getAvgScore를 구현하시오
	
	public double getAvgScore(int[] intArr) {
		int sum = 0;
		for(int score : intArr) sum += score;
		
		
		return (double)sum / intArr.length;
	}
	
	
	public static void main(String[] args) {
		Score score = new Score();
		final int SIZE = 10;
		
		int[] scores = new int[SIZE];
		
		for(int i = 0; i < SIZE; ++i) {
			scores[i] = (int)(Math.random() * 100) + 1;
		}

		System.out.println(score.getTotalScore(scores));
		System.out.println(score.getAvgScore(scores));
	}
	
	
}
